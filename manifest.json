{
    "manifest_version": 3,
    "name": "photo cut",
    "description": "Base Level Extension",
    "version": "1.0",
    "action": {
        "default_popup": "./dist/index.html",
        "default_icon": "logo.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://lanhuapp.com/*"
            ],
            "js": [
                "./dist/boot.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "/dist/inject.js"
            ],
            "matches": [
                "https://lanhuapp.com/*"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "management",
        "scripting",
        "webRequest",
        "storage"
    ]
}